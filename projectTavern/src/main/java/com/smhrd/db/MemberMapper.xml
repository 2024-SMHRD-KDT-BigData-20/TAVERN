<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smhrd.db.MemberMapper">

	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="MemberVO">
		INSERT INTO user_info
		VALUES (#{id}, #{pw}, #{name}, #{nick}, #{birthdate}, #{gender},
		#{email}, sysdate)
	</insert>
	<!-- 회원가입 끝 -->

	<!-- 로그인 -->
	<select id="selectMember" parameterType="MemberVO"
		resultType="MemberVO">
		select * from user_info where id=#{id} and pw=#{pw}
	</select>
	<!-- 로그인 끝 -->

	<!-- 업데이트sql문 -->
	<update id="updateMember" parameterType="MemberVO">
		update user_info set
		pw=#{pw} , nick=#{nick}
		where id=#{id}
	</update>
	<!-- 업데이트 끝 -->

	<!-- 아이디 찾기 -->
	<select id="findIdByEmail" parameterType="String"
		resultType="MemberVO">
		select id from user_info where email = #{email}
	</select>
	<!-- 아이디 찾기 끝 -->

	<!-- 비밀번호 찾기 -->
	<select id="findIdById" parameterType="String"
		resultType="MemberVO">
		select * from user_info where id = #{id}
	</select>
	<!-- 비밀번호 찾기 끝 -->

	<!-- 아이디 유효성 검사 -->
	<select id="checkID" parameterType="String"
		resultType="MemberVO">
		select id from user_info where id=#{id}
	</select>
	<!-- 아이디 유효성 검사 끝 -->








</mapper>